<% if @user.unchecked_works.empty? %>
  <p>您已完成今天所有的任务!您真棒！</p>
<% else %>
    <% @rec = WorkRecord.new %>
    <%= form_for @rec, remote: true do |f|%>
        <%= f.label :work_id, value: 'Work'%>:
        <%= collection_select :work_record, :work_id, @user.unchecked_works, :id, :name%><br />

        <%= f.label :comment %>:
        <%= f.text_area :comment %><br />

        <%= f.submit value: 'Check' %><br />
    <% end %>
<% end %>

